{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "outDir": "./dist",
        "jsx": "preserve",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": false,
        "lib": ["DOM", "ES6", "DOM.Iterable", "ScriptHost"],
        "sourceMap": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./lib"
    ]
}